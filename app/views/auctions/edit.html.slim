.container
  .row
    .col-md-6.col-md-offset-3
      h1 Edit auction
      h4 Account: #{@auction.account.to_s}
      = simple_form_for @auction, url: auction_path do |f|
        = f.input :final_price, label: 'Price for immediate buy'
        = f.input :minimum_price, label: 'Minimum price'
        = f.input :payment_type, label: 'Payment type', collection: Auction::PAYMENT_TYPES
        = f.input :end_date, label: 'End of auction'
        = f.button :submit, 'Edit auction'